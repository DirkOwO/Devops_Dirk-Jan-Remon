{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
	"jest":true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
	"no-unused-vars": [
		"error", {
			"vars": "all",
			"args": "none",
			"ignoreRestSiblings": true
		}
	]
    }
}
